@model PcWorld.Models.Myszki

<h2>Dodaj nową pozycję</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(model => model.Nazwa)
        @Html.EditorFor(model => model.Nazwa, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Nazwa, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Opis)
        @Html.EditorFor(model => model.Opis, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Opis, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Cena)
        @Html.EditorFor(model => model.Cena, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Cena, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Kategoria")
        @Html.DropDownList("Kategoria", (SelectList)ViewBag.Kategorie, "Wybierz kategorię", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Kategoria, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="Dodaj pozycję" class="btn btn-primary" />
    </div>
}

<a href="@Url.Action("Index", "Myszki")">Powrót do widoku głównego</a>